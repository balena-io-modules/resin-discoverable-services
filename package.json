{
  "name": "resin-discoverable-services",
  "version": "2.0.1",
  "description": "Resin.io local service discovery utilities",
  "main": "build/discoverable.js",
  "homepage": "https://github.com/resin-io-modules/resin-discoverable-services",
  "types": "./lib/declarations.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resin-io-modules/resin-discoverable-services.git"
  },
  "keywords": [
    "resin",
    "service",
    "discovery"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "install": "npm run build",
    "build": "rm -rf build/ && npm run build:native && npm run build:coffee",
    "build:native": "node-gyp rebuild || true",
    "build:coffee": "coffee -o build/ -c lib/",
    "lint": "resin-lint lib tests",
    "mocha": "mocha --compilers coffee:coffee-script/register tests/**/*.spec.coffee",
    "test": "npm run build && npm run lint && npm run mocha",
    "prepublish": "require-npm4-to-publish",
    "prepublishOnly": "npm test"
  },
  "author": "Heds Simons <heds@resin.io>",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coffee-script": "~1.11.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.5.0",
    "mochainon": "^1.0.0",
    "mockery": "^1.7.0",
    "require-npm4-to-publish": "^1.0.0",
    "resin-lint": "^1.4.0",
    "rmdir": "^1.2.0"
  },
  "dependencies": {
    "bindings": "^1.3.0",
    "bluebird": "^3.0.0",
    "bonjour": "git+https://github.com/resin-io/bonjour.git",
    "ip": "^1.1.4",
    "lodash": "^4.17.4",
    "nan": "^2.6.2"
  },
  "optionalDependencies": {
    "dbus-native": "^0.2.2"
  }
}